<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <TextView android:id="@+id/webPropertyIdLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/webPropertyIdLabel" />
        <!-- TODO(aihawkins): Set numeric pattern with 2 input boxes instead -->
        <EditText android:id="@+id/webPropertyId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:hint="@string/webPropertyIdHint" />

        <ToggleButton android:id="@+id/anonymizeIp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="@string/anonymizeIpOn"
            android:textOff="@string/anonymizeIpOff" />

        <ToggleButton android:id="@+id/autoDispatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="@string/autoDispatchOn"
            android:textOff="@string/autoDispatchOff" />
        <TextView android:id="@+id/dispatchIntervalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dispatchIntervalLabel" />
        <EditText android:id="@+id/dispatchInterval"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:numeric="integer"
            android:singleLine="true"
            android:text="@string/dispatchInterval" />

        <ToggleButton android:id="@+id/debug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="@string/debugOn"
            android:textOff="@string/debugOff" />
        <ToggleButton android:id="@+id/dryRun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="@string/dryRunOn"
            android:textOff="@string/dryRunOff" />

        <Button android:id="@+id/stopSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stopSession" />
        <Button android:id="@+id/startSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startSession" />
    </LinearLayout>
</ScrollView>
